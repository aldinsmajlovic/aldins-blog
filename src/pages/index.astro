---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
const recentPosts = posts.slice(0, 3);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<h1>Aldin Smajlovic</h1>
				<p class="tagline">Security Student & Pentester @ ITH Stockholm.</p>
				<p class="bio">
		Aspiring penetration tester.
		I spend most of my time keeping up with new tech and how it relates to security. 
        When I'm not in a terminal, I'm likely producing music or behind a camera.
				</p>
			<hr />
				<div class="section-header">
					<h2>Latest Research</h2>
					<a href="/blog" class="view-all">View Archive â†’</a>
				</div>
				<ul class="post-list">
					{recentPosts.map((post) => (
						<li>
							<a href={`/blog/${post.id}/`}>
								<span class="title">{post.data.title}</span>
								<span class="date"><FormattedDate date={post.data.pubDate} /></span>
							</a>
						</li>
					))}
				</ul>
		</main>
		<Footer />
	</body>
</html>

<style>
	.hero { padding: 3rem 0; }
	.hero h1 { font-size: 3rem; margin: 0; color: var(--text-bold); }
	.tagline { font-size: 1.2rem; color: var(--accent); font-weight: 600; margin-top: 0.5rem; }
	.bio { max-width: 650px; color: var(--text-main); margin-top: 1.5rem; line-height: 1.6; }

	.section { padding: 2rem 0; }
	.section-header { display: flex; justify-content: space-between; align-items: baseline; margin-bottom: 1.5rem; }
	.view-all { font-size: 0.9rem; color: var(--accent); text-decoration: none; }

	.post-list { list-style: none; padding: 0; }
	.post-list li a { 
		display: flex; justify-content: space-between; padding: 1rem; 
		border: 1px solid var(--border); border-radius: 8px; margin-bottom: 0.75rem;
		text-decoration: none; transition: 0.2s ease;
	}
	.post-list li a:hover { border-color: var(--accent); background: var(--bg-surface); transform: translateY(-2px); }
	.title { font-weight: 600; color: var(--text-bold); }
	.date { color: var(--text-muted); font-size: 0.9rem; }
</style>