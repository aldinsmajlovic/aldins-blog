---
import Layout from '../layouts/BlogPost.astro';
---

<Layout
	title="Contact"
	description="Connect with Aldin Smajlovic"
	pubDate={new Date('2026-01-20')}
>
	<div class="contact-grid">
		<a href="https://linkedin.com/in/aldin-smajlovic" target="_blank" class="contact-card">
			<span class="label">LinkedIn</span>
			<span class="value">/in/aldin-smajlovic</span>
		</a>
		<a href="https://github.com/aldinsmajlovic" target="_blank" class="contact-card">
			<span class="label">GitHub</span>
			<span class="value">/aldinsmajlovic</span>
		</a>
	</div>
</Layout>

<style>
	.contact-grid { display: grid; gap: 1rem; margin-top: 2rem; }
	.contact-card { 
		display: flex; justify-content: space-between; align-items: center;
		padding: 1.25rem 1.5rem; background: var(--bg-surface); 
		border: 1px solid var(--border); border-radius: 8px;
		text-decoration: none; transition: 0.2s ease;
	}
	.contact-card:hover { border-color: var(--accent); transform: translateX(4px); }
	.label { color: var(--accent); font-size: 0.8rem; font-weight: bold; text-transform: uppercase; }
	.value { font-family: ui-monospace, monospace; color: var(--text-main); }
</style>
